#!/usr/bin/env node
var debug = require('debug')('my-application');
var app = require('../app');
var self = this;
var Myo = require('../myo/myo');

var devices = [];

app.set('port', process.env.PORT || 3000);

var server = app.listen(app.get('port'), function() {
    debug('Express server listening on port ' + server.address().port);
    Myo.server = self;
});

var io = require('socket.io')(server);

io.on('connection',function(socket){
    devices.push({zPos: 0, socket: socket});
});

io.on('disconnect', function(socket){
    var i;
    for (i = 0; i < devices.length; i++){
      if (socket.id === devices[i].socket.id)
        break;
    }
    devices = devices.splice(i,1);
});

io.on('awaitingPosition', function(data) {
  Myo.awaitingPosition = true;
  console.log('waiting for position');
});

var addDevice = function(z) {
  console.log('add device at :' + z);
};
