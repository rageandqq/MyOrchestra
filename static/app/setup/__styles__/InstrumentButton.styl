@require '../../__styles__/colors'
@require '../../__styles__/fonts'

.r-InstrumentButton
  display inline-block
  width 250px
  height 200px
  margin 20px
  background-color #fff
  border 0
  text-align center

  font-family $roboto
  font-size 1.5em
  color #000

  cursor pointer
  outline none

  transition box-shadow 0.2s ease

  &:hover
    box-shadow 0px 0px 12px grey-800

  &:active
    box-shadow 0px 0px 15px grey-900
